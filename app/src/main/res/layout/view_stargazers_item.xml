<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:minHeight="100dp"
    android:layout_marginTop="@dimen/dimen_default_quarter"
    android:layout_marginBottom="@dimen/dimen_default_quarter"
    android:layout_marginLeft="@dimen/dimen_default_half"
    android:layout_marginRight="@dimen/dimen_default_half"
    android:clickable="true"
    android:focusable="true"

    app:cardCornerRadius="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView android:id="@+id/iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="@dimen/dimen_default"
            android:layout_marginEnd="@dimen/dimen_default_half"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0"

            tools:src="@mipmap/ic_launcher"/>

        <TextView android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_default_half"
            android:layout_marginEnd="@dimen/dimen_default"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv"
            app:layout_constraintTop_toTopOf="parent"

            tools:text="Stargazer" />

    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>


